# ~/.hgrc - hgrc(5) - Mercurial configuration

[alias]
lg = log --template "{rev}:{node|short} {desc|firstline}\n"
mirror = clone --noupdate
nudge = push --rev .
pending = incoming --template '* {desc|firstline}\n'
untrack = rm -Af

[diff]
git = True

[extensions]
convert =
gpg =
mq =
pager =
purge =
rebase =

[ui]
username = $NAME <$EMAIL>

[web]
cacerts = /etc/ssl/certs/ca-certificates.crt
ipv6 = True
