# ~/.hgrc - hgrc(5) - Mercurial configuration

[alias]
lg = log --template "{rev}:{node|short} {desc|firstline}\n"
mirror = clone --noupdate
nudge = push --rev .
pending = incoming --template '* {desc|firstline}\n'
untrack = rm -Af

[diff]
git = True

[extensions]
color =
convert =
gpg =
hgk =
mq =
pager =
# default as of v3.5
progress =
purge =
rebase =

[format]
# I think this is on by default?
# also read http://gregoryszorc.com/blog/2014/02/05/the-mercurial-revlog/
#generaldelta = True

[ui]
username = $NAME <$EMAIL>

[web]
cacerts = /etc/ssl/certs/ca-certificates.crt
ipv6 = True
