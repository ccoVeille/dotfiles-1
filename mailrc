set from="m@nullroute.eu.org"

# interface
set quiet
#set verbose

# reading
retain From To Sender Date Subject X-Bogosity

# listing
set autothread

# composing
set ask
unset askcc
set editheaders
set dot

set indentprefix=">"
set signature="~/.signature"

# mail storage
set hold # don't move to mbox
set keep # don't delete $MAIL

set folder="mail/"
set record="+sent"

# remote storage
set pop3-use-starttls
set imap-use-starttls
set smtp-use-starttls
account nullroute {
	set from="grawity@nullroute.eu.org"
	set folder="imap://grawity@equal.cluenet.org"
	set smtp="equal.cluenet.org:587"
	set imap-auth="gssapi"
	set smtp-auth="gssapi"
}
set folder=mail
