#set from="m@nullroute.eu.org"

# interface
set quiet
#set verbose

# reading
retain From To Sender Date Subject X-Bogosity

# listing
set autothread

# composing
set ask
unset askcc
set editheaders
set dot

set indentprefix="> "
set signature="~/.signature"

# mail storage
set hold # don't move to mbox
set keep # don't delete $MAIL

set sendcharsets=utf-8

set folder="mail/"
set record="+sent"

set NAIL_EXTRA_RC="~/lib/dotfiles/nailrc"
