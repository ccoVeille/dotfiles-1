#!sh

# paths/locations

setpath PATH \
	"$(ruby -rubygems -e 'puts Gem.user_dir')/bin"	\
	"$PATH"						;

# libdefaults

if [ -z "$KRB5CCNAME" ] && [ -d "$XDG_RUNTIME_DIR" ]; then
	mkdir -p -m 0700 "$XDG_RUNTIME_DIR/krb5cc" &&
	KRB5CCNAME="DIR:$XDG_RUNTIME_DIR/krb5cc"
fi

LIBVA_DRIVER_NAME="vdpau"
SDL_AUDIODRIVER="pulse"

# appconfig

CRAWL_DIR="$XDG_DATA_HOME/crawl/"
CSEARCHINDEX="$XDG_CACHE_HOME/codesearch/csearchindex"
EXODUSVIEWER_USER_DIR="$XDG_DATA_HOME/exodusviewer"
FIRESTORM_USER_DIR="$XDG_DATA_HOME/firestorm"
GEMRC="$XDG_CONFIG_HOME/gemrc"
GIMP2_DIRECTORY="$XDG_DATA_HOME/gimp"
GRAMPSHOME="$XDG_DATA_HOME/gramps"
MAILCAP="$XDG_CONFIG_HOME/mailcap" # for elinks, w3m
MAILCAPS="$MAILCAP" # for mutt, alpine
MTOOLSRC="$XDG_CONFIG_HOME/mtoolsrc"
OPERA_PERSONALDIR="$XDG_DATA_HOME/opera"
QUODLIBET_USERDIR="$XDG_DATA_HOME/quodlibet"
SECONDLIFE_USER_DIR="$XDG_DATA_HOME/secondlife"
VBOX_USER_HOME="$XDG_CONFIG_HOME/VirtualBox"
WGETRC="$XDG_CONFIG_HOME/wgetrc"
WMII_CONFPATH="$XDG_CONFIG_HOME/wmii"

# (TODO)
#CABAL_CONFIG="$XDG_CONFIG_HOME/cabal/config"
#WINEPREFIX=

VIMINIT=":so ~/.vim/vimrc"
GVIMINIT=":so ~/.vim/gvimrc"

# appdefaults

ACCDB="/run/media/$USER/grawpqi/Private/accounts.db.txt"
MPD_HOST="$(<"$XDG_CONFIG_HOME/mpd/password")@$XDG_RUNTIME_DIR/mpd.control"
PERL_CPANM_OPT="$PERL_CPANM_OPT --mirror http://ftp.litnet.lt/pub/CPAN/"
