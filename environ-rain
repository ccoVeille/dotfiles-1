#!bash

# paths/locations

setpath PATH \
	"$(ruby -rubygems -e 'puts Gem.user_dir')/bin"	\
	"$HOME/lib/git/bin"	\
	"$HOME/lib/mosh/bin"	\
	"$PATH"			;

# libdefaults

if [ -z "$KRB5CCNAME" ] && [ -d "$XDG_RUNTIME_DIR" ]; then
	mkdir -p -m 0700 "$XDG_RUNTIME_DIR/krb5cc" &&
	KRB5CCNAME="DIR:$XDG_RUNTIME_DIR/krb5cc"
fi

#WINEDLLOVERRIDES="winemenubuilder.exe=d"

# appconfig

GNUSTEP_USER_ROOT="$XDG_CONFIG_HOME/GNUstep"
ICEWM_PRIVCFG="$XDG_CONFIG_HOME/IceWM"
OPERA_PERSONALDIR="$XDG_CONFIG_HOME/opera"
WMII_CONFPATH="$XDG_CONFIG_HOME/wmii"

# appdefaults

ACCDB="/run/media/$USER/grawpqi/private/accounts.db.txt"
MAKEFLAGS="-j 5"
MPD_HOST="$(<"$XDG_CONFIG_HOME/mpd/password")@$XDG_RUNTIME_DIR/mpd.control"
