# host-specific additions to ~/.environ
# vim: ft=sh

# paths/locations

if have ruby; then
	PATH="$(ruby -rubygems -e 'puts Gem.user_dir')/bin:$PATH"
fi

if [ ! "$SSH_AUTH_SOCK" ]; then
	SSH_AUTH_SOCK="$XDG_CONFIG_HOME/ssh-agent.socket"
fi

if [ ! "$GPG_AGENT_INFO" ]; then
	GPG_AGENT_INFO="$HOME/.gnupg/S.gpg-agent:0:1"
fi

# libdefaults

LIBVA_DRIVER_NAME="vdpau"

# Force `gem install nokogiri` to use system libxml2
NOKOGIRI_USE_SYSTEM_LIBRARIES="1"

# appconfig

CRAWL_DIR="$XDG_DATA_HOME/crawl/"
CSEARCHINDEX="$XDG_CACHE_HOME/codesearch/csearchindex"
GEMRC="$XDG_CONFIG_HOME/gemrc"
MAILCAP="$XDG_CONFIG_HOME/mailcap" # for elinks, w3m
MAILCAPS="$MAILCAP" # for mutt, alpine
TAR_OPTIONS="--xattrs"
VBOX_USER_HOME="$XDG_CONFIG_HOME/VirtualBox"

MANLESS="]0;\$MAN_PN Manual page \$MAN_PN ?ltline %lt?L/%L.:byte %bB?s/%s..?e (END):?pB %pB\\%.. "
NMAP_PRIVILEGED="1"

# (TODO)
#CABAL_CONFIG="$XDG_CONFIG_HOME/cabal/config"
#WINEPREFIX=

# appdefaults

CN_LDAP_SERVER="ldap://wolke.nullroute.eu.org";

ACCDB="/run/media/$USER/grawpqi/Private/accounts.db.txt"
MPD_HOST="$(cat "$XDG_CONFIG_HOME/mpd/password")@$XDG_RUNTIME_DIR/mpd.control"
PERL_CPANM_OPT="$PERL_CPANM_OPT --mirror http://ftp.litnet.lt/pub/CPAN/"
