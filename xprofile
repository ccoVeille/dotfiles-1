#!sh
# GTK_RC_FILES
# GTK2_RC_FILES

: ${HOSTNAME:=$(hostname)}

ulimit -c 65536 # enable coredumps

spawn -l- acpieventd

if [ -e ~/.mpdconf ]; then
	spawn -Ll- mpd
fi

#spawn mpc-up
#spawn scmpc
#spawn mc-presence available

if [ -f ~/.config/synclient.conf ]; then
	xargs synclient < ~/.config/synclient.conf
fi

# FIXME: Temporary workaround while GNOME's keyboard shit is shitty
if [ "$DESKTOP_SESSION" = "gnome" ]; then
	setxkbmap -layout us,lt -option grp:alt_shift_toggle,compose:caps
fi
