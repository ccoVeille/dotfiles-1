#!sh

xhost +"SI:localuser:$USER"

if [ -f ~/.Xkbmap ]; then
	setxkbmap `cat ~/.Xkbmap`
fi

if have keyctl; then
	if [ "`keyctl rdescribe @s`" = "`keyctl rdescribe @us`" ]; then
		keyctl new_session
		keyctl link @u @s
	fi
fi

if [ "$DESKTOP_SESSION" != "systemd" ]; then
	if [ -e ~/.mpdconf ]; then
		spawn -Ll- mpd
	fi
fi

#spawn -l- acpieventd
#spawn mpc-up
#spawn scmpc
#spawn mc-presence available

if [ -f ~/.config/synclient.conf ]; then
	synclient `grep -v "^#" ~/.config/synclient.conf`
fi

#(cd ~/Dropbox/mq && spawn ./mq-udp-subscriber >/dev/null)
