#!sh

xhost +"SI:localuser:$USER"
xhost +"NIS:unix.$UID@nullroute"

# set up session keyring

if have keyctl; then
	if [ "`keyctl rdescribe @s`" = "`keyctl rdescribe @us`" ]; then
		keyctl new_session
		keyctl link @u @s
	fi
fi

# load SSH keys & other credentials
# from stashed login password

if have auca-seed; then
	auca-seed
fi

# load X settings

if [ -f ~/.config/synclient.conf ]; then
	synclient `grep -v "^#" ~/.config/synclient.conf`
fi

# run startup programs
