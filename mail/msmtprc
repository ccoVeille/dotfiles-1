# ~/.msmtprc: msmtp(1)
# vim: ft=msmtp

defaults
	logfile ~/.cache/msmtp.log
	syslog LOG_MAIL
	tls on
	tls_trust_file /etc/ssl/certs/ca-certificates.crt

account gmail
	from grawity@gmail.com
	host smtp.gmail.com
	port 587
	auth plain
	user grawity@gmail.com

account nullroute
	from grawity@nullroute.eu.org
	host mail.nullroute.eu.org
	port 587
	auth gssapi
	user grawity
	#tls_trust_file ~/lib/dotfiles/ca-certs/Nullroute_CA_r4.pem

account ukolegija
	from mantas@utenos-kolegija.lt
	host mail.utenos-kolegija.lt
	port 587
	auth plain
	user mantas

account default : nullroute
