# ~/.msmtprc: msmtp(1)
# vim: ft=msmtp

defaults
	logfile ~/.cache/msmtp.log
	syslog LOG_MAIL
	tls on
	tls_trust_file /etc/ssl/certs/ca-certificates.crt

account nullroute
	from grawity@nullroute.eu.org
	host mail.nullroute.eu.org
	port 587
	auth gssapi
	user grawity
	tls_trust_file ~/lib/dotfiles/ca-certs/nullroute.pem

account krantas : nullroute
	from m@ntas.in

account gmail
	from grawity@gmail.com
	host smtp.gmail.com
	port 587
	auth plain
	user grawity@gmail.com

account default : nullroute
