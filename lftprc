# ~/.config/lftp/rc

set xfer:clobber no

### interface

alias ls cls
alias ll cls -lh

set cmd:prompt "\\[\\e[38;5;173m\\]lftp \\[\\e[38;5;216m\\]\\S\\? \\u\\@\\h:\\w>\\[\\e[m\\] "

### network

set dns:SRV-query yes
set ftp:anon-pass "grawity@gmail.com"
#set ftp:port-range 37000-37999
set ftp:use-ip-tos yes

### transport security

set ssl:cert-file "~/.pki/private/auth-grawity.pem"
set ssl:key-file "~/.pki/private/auth-grawity.pem"

set ftp:ssl-allow-anonymous yes
set ftp:ssl-protect-data yes
set ftp:ssl-protect-fxp yes

# require active-data connections to come from control peer
# (disabled by default due to improperly multihomed servers)
set ftp:verify-address yes

### compatibility

#set ftp:passive-mode/ftp.ukolegija.lt no

#set ftp:prefer-epsv yes
#set ftp:prefer-epsv/ftp.ukolegija.lt no

# one command at a time (on by default due to buggy routers)
set ftp:sync-mode no
set ftp:sync-mode/gein.vistech.net yes

set ftp:charset/212.164.230.75 "cp1251"
