<?xml version="1.0"?>
<!DOCTYPE fontconfig SYSTEM "fonts.dtd">
<!--
  http://www.freedesktop.org/software/fontconfig/fontconfig-user.html
  vim: ft=xml:ts=4:sw=4:et
-->
<fontconfig>

    <!-- Global settings -->

    <match target="font">
        <edit name="antialias"> <bool>true</bool>           </edit>
        <edit name="rgba">      <const>rgb</const>          </edit>
        <edit name="hinting">   <bool>true</bool>           </edit>
        <edit name="hintstyle"> <const>hintfull</const>     </edit>
        <edit name="autohint">  <bool>false</bool>          </edit>
        <edit name="lcdfilter"> <const>lcddefault</const>   </edit>
        <edit name="embeddedbitmap">    <bool>false</bool>  </edit>
    </match>

    <match target="font">
        <test name="lang" compare="contains"> <string>ja</string> </test>
        <edit name="embeddedbitmap"> <bool>true</bool> </edit>
    </match>

    <match target="font">
        <test name="lang" compare="contains"> <string>ko</string> </test>
        <edit name="embeddedbitmap"> <bool>true</bool> </edit>
    </match>

    <match target="font">
        <test name="lang" compare="contains"> <string>zh</string> </test>
        <edit name="embeddedbitmap"> <bool>true</bool> </edit>
    </match>

    <!-- Font aliases -->

    <alias>
        <family>serif</family>
        <prefer> <family>Times New Roman</family> </prefer>
    </alias>

    <alias>
        <!-- fix Latin-only font issue in www.laukineszasys.lt -->
        <family>Gentium Book Basic</family>
        <prefer> <family>Times New Roman</family> </prefer>
    </alias>

    <alias binding="same">
        <family>MS Sans Serif</family>
        <prefer> <family>Tahoma</family> </prefer>
    </alias>

    <alias binding="same">
        <family>MS Shell Dlg</family>
        <prefer> <family>Tahoma</family> </prefer>
    </alias>

    <!-- Fix hinting for some other fonts -->

    <match target="font">
        <test name="family"> <string>Segoe UI</string> </test>
        <edit name="autohint"> <bool>true</bool> </edit>
    </match>

    <match target="font">
        <test name="family"> <string>Source Code Pro</string> </test>
        <edit name="hintstyle"> <const>hintslight</const> </edit>
    </match>

</fontconfig>
