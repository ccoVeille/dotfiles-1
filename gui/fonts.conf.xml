<?xml version="1.0"?>
<!DOCTYPE fontconfig SYSTEM "fonts.dtd">
<!--
  http://www.freedesktop.org/software/fontconfig/fontconfig-user.html
  vim: ft=xml:ts=4:sw=4:noet
-->
<fontconfig>

	<!-- Global settings -->

	<match target="font">
		<!--
		<edit name="antialias" mode="assign">
			<bool>true</bool>
		</edit>
		<edit name="rgba" mode="assign">
			<const>rgb</const>
		</edit>
		<edit name="hinting" mode="assign">
			<bool>true</bool>
		</edit>
		<edit name="hintstyle" mode="assign">
			<const>hintfull</const>
		</edit>
		<edit name="autohint" mode="assign">
			<bool>false</bool>
		</edit>
		-->
		<edit name="lcdfilter" mode="assign">
			<const>lcddefault</const>
		</edit>
	</match>

	<alias binding="same">
		<family>MS Sans Serif</family>
		<prefer>
			<family>Tahoma</family>
		</prefer>
	</alias>

	<alias binding="same">
		<family>MS Shell Dlg</family>
		<prefer>
			<family>Tahoma</family>
		</prefer>
	</alias>

	<!-- Enable autohinting for some fonts -->

	<match target="font">
		<test name="family">
			<string>Calibri</string>
		</test>
		<edit name="autohint" mode="assign">
			<bool>true</bool>
		</edit>
	</match>

	<match target="font">
		<test name="family">
			<string>Cambria</string>
		</test>
		<edit name="autohint" mode="assign">
			<bool>true</bool>
		</edit>
	</match>

	<match target="font">
		<test name="family">
			<string>Candara</string>
		</test>
		<edit name="autohint" mode="assign">
			<bool>true</bool>
		</edit>
	</match>

	<match target="font">
		<test name="family">
			<string>Consolas</string>
		</test>
		<edit name="autohint" mode="assign">
			<bool>true</bool>
		</edit>
	</match>

	<match target="font">
		<test name="family">
			<string>Constantia</string>
		</test>
		<edit name="autohint" mode="assign">
			<bool>true</bool>
		</edit>
	</match>

	<match target="font">
		<test name="family">
			<string>Corbel</string>
		</test>
		<edit name="autohint" mode="assign">
			<bool>true</bool>
		</edit>
	</match>

	<!-- not really needed -->
	<match target="font">
		<test name="family">
			<string>Georgia</string>
		</test>
		<edit name="autohint" mode="assign">
			<bool>true</bool>
		</edit>
	</match>

	<match target="font">
		<test name="family">
			<string>Segoe UI</string>
		</test>
		<edit name="autohint" mode="assign">
			<bool>true</bool>
		</edit>
	</match>

	<!-- not really needed -->
	<match target="font">
		<test name="family">
			<string>Trebuchet MS</string>
		</test>
		<edit name="autohint" mode="assign">
			<bool>true</bool>
		</edit>
	</match>

	<match target="font">
		<test name="family">
			<string>Verdana</string>
		</test>
		<edit name="autohint" mode="assign">
			<bool>true</bool>
		</edit>
	</match>

	<!-- Disable ugly "embedded bitmaps" for Microsoft screen fonts -->

	<match target="font">
		<test name="family">
			<string>Calibri</string>
		</test>
		<edit name="embeddedbitmap" mode="assign">
			<bool>false</bool>
		</edit>
	</match>

	<match target="font">
		<test name="family">
			<string>Cambria</string>
		</test>
		<edit name="embeddedbitmap" mode="assign">
			<bool>false</bool>
		</edit>
	</match>

</fontconfig>
