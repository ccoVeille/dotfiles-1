## Aliases

alias clock='tty-clock -c'
alias gmm='run google-musicmanager'
alias RM='/bin/rm -I'

rm() {
	local opts=() arg path nuke=() trash=()
	for arg; do
		if [[ $arg == -* ]]; then
			opts+=("$arg")
		elif case $(realpath -s "$arg") in
		# skip filesystems
		~/Private/*)		false;;
		~/fs/*)			false;;
		~/@*)			false;;
		# skip system stuff
		~/lib/*)		false;;
		~/pkg/*)		false;;
		~/src/*)		false;;
		# skip dotfiles and temp
		#~/.*)			false;;
		~/.local/share/Trash/*)	false;;
		*.tmp)			false;;
		.unison.*)		false;;
		# include everything else in $HOME
		~/*)			true;;
		# include removable drives
		/media/*)		true;;
		/run/media/*)		true;;
		# exclude everything else elsewhere
		*)			false;;
		esac; then
			trash+=("$arg")
		else
			nuke+=("$arg")
		fi
	done
	if (( ${#trash[@]} )); then
		trash "${opts[@]}" -- "${trash[@]}"
	fi &&
	if (( ${#nuke[@]} )); then
		command rm -I "${opts[@]}" -- "${nuke[@]}"
	fi
}

unrm() {
	trash --restore "$@"
}

rpw() {
	local pw=$(tr -dc "A-Za-z0-9" < /dev/urandom | head -c "${1:-12}")
	echo "$pw"
	if [[ -t 1 ]]; then
		echo -n "$pw" | gclip
	fi
}

youtube-dl() {
	local cmd=()
	cmd+=(
		systemd-inhibit
		--who "youtube-dl"
		--what "sleep"
		--why "Downloading a video"
	)
	cmd+=(
		gnome-inhibit -A
		--who "youtube-dl"
		--what "suspend"
		--why "Downloading a video"
	)
	cmd+=(
		youtube-dl
		--add-metadata
		--console-title
		--continue
		--xattrs
		"$@"
	)
	"${cmd[@]}"
}

sudo:() {
	if (( UID ))
		then do: sudo "$@"
		else do: "$@"
	fi
}

add-vlan() {
	sudo: ip link add link "${1%.*}" name "$1" type vlan id "${1##*.}"
	if [[ $2 == dhcp ]]; then
		use-dhclient "$1"
	elif [[ $2 ]]; then
		sudo: ip link set "$1" up
		sudo: ip addr add "$2" dev "$1"
	fi
}

use-dhcp() {
	sudo: dhcpcd --ipv4only --noarp --reboot 0 --timeout 0 --nobackground \
		--nohook resolv.conf --debug "${1:-eth0}" "${@:2}"
}

use-dhclient() {
	sudo: dhclient -4 -d -v "${1:-eth0}" "${@:2}"
}

use-autoip() {
	sudo: avahi-autoipd --force-bind "${1:-eth0}" "${@:2}"
}

ecap() {
	sudo: tcpdump -n -i "${dev:-eth0}" "$@"
}

earp() {
	ecap -e "arp or (udp port 67 or 68)"
}

ecn() {
	case $1 in
	    1|y*|on)
		sudo: sysctl -q net.ipv4.tcp_ecn=1;;
	    0|n*|off)
		sudo: sysctl -q net.ipv4.tcp_ecn=0;;
	    *)
		sysctl net.ipv4.tcp_ecn;;
	esac
}

utelnet() {
	# connect to RedBoot on Ubiquiti PicoStations
	do: telnet 192.168.1.20 9000
}

ukip() {
	sudo: ip link set eth0 up
	sudo: ip addr flush dev eth0
	sudo: ip addr add 169.254.0.1/16  dev eth0 scope link
	sudo: ip addr add 10.128.0.42/16  dev eth0
	sudo: ip addr add 172.16.0.42/12  dev eth0
	sudo: ip addr add 192.168.0.42/24 dev eth0
	sudo: ip addr add 192.168.1.42/24 dev eth0
	#sudo: ip addr add 192.168.172.42/24 dev eth0
}

vnet() {
	sudo: systemctl "${1:-status}" vm-network.target
}

scrape-reddit() {
	(( $# )) || set -- $(pclip)
	local u; for u; do
		if [[ $u == *[./]reddit.com/r/* ]]; then
			local f=$(date +%s.%N)
			~/code/net/scrape-reddit-comment "$u" \
			| tee ~/tmp/Reddit/tmp/$f \
			&& mv ~/tmp/Reddit/{tmp,new}/$f
		else
			echo "ಠ_ಠ"
		fi
	done
}

c2p() for _f; do
	openssl x509 -in "$_f" -inform DER -out "${_f%.*}.pem" -outform PEM
done

p2c() for _f; do
	openssl x509 -in "$_f" -inform PEM -out "${_f%.*}.crt" -outform DER
done

nssdb="sql:$HOME/.pki/nssdb"

cu() { do: certutil -d "$nssdb" "$@"; }
pu() { do: pk12util -d "$nssdb" "$@"; }
mu() { do: modutil  -dbdir "$nssdb" "$@"; }
pe() { do: pesign   -n "$nssdb" "$@"; }
st() { do: signtool -d "$nssdb" "$@"; }
nss-import-key() { pu -i "$@"; }
java-import-key() { keytool -importkeystore -srcstoretype PKCS12 -srckeystore "$@"; }

b64() { printf "%s" "$*" | base64 | tr -dc "A-Za-z0-9+/="; }

## Prompt

_nolid_prompt() {
	if [[ -e "$XDG_RUNTIME_DIR/nolid.hold" ]]; then
		item_name_sfx=':[lid]'
	elif [[ -e "$XDG_RUNTIME_DIR/nolid.lock" ]]; then
		item_name_sfx=':lid'
	else
		item_name_sfx=''
	fi
	fmt_name_sfx='|38;5;238'
}

PROMPT_COMMAND+="; _nolid_prompt"
