# host aliases

Host equal
	Hostname equal.cluenet.org
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

Host equal+http
	Hostname equal.cluenet.org
	GSSAPIAuthentication no
	ForwardAgent yes
	ProxyCommand corkscrew %h 80 %h %p

Host moose
	Hostname lotl.mine.nu
	ForwardAgent yes

Host panther
	Hostname panther.nathan7.eu
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

Host panther/console
	Hostname 188.165.214.40
	User console-tdnfoj

Host rain rain.local
	Hostname rain.nullroute.eu.org
	#GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes
	ForwardX11 yes

Host snow snow.home snow.local
	#Hostname snow.home
	#Hostname snow.nullroute.eu.org
	HostkeyAlias snow.nullroute.eu.org
	User Mantas
	#GSSAPIAuthentication yes
	#GSSAPIDelegateCredentials yes
	#ForwardAgent yes

Host virgule
	Hostname virgule.cluenet.org
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

# *.cluenet.org

Host *.cluenet.org
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

# *.nullroute.eu.org

Host *.nullroute.eu.org *.home
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

Host storm
	Hostname storm.nullroute.eu.org

Host storm/console
	Hostname 199.231.209.10
	User console-Q2dsLV

Host vm-sarge
	Hostname localhost
	Port 3001
	ForwardAgent yes
	ForwardX11 yes

# other domains

Host *.nathan7.eu
	ForwardAgent yes

Host *.vistech.net
	User grwty

Host bazaar.launchpad.net
	IdentityFile no

# global options

Host *
	Protocol 2
	ForwardX11Trusted yes
#if OpenSSH
	VerifyHostKeyDNS yes
#endif
	NoHostAuthenticationForLocalhost yes
	HashKnownHosts no

#if OpenSSH
	ControlPath ~/.ssh/S.%l.%r@%h:%p
	ControlMaster auto
#endif
#if OpenSSH && Version 5.6
	ControlPersist 10m
#endif

#if OpenSSH
	SendEnv LANG PULSE_SERVER TZ
#endif

	ServerAliveInterval 600
	#ServerAliveCountMax 3
