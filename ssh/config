# ~/.ssh/config: ssh_config(5)
# vim: ft=sshconfig

# note that the '#if' directives are not supported by any SSH client directly;
# instead, they are processed by the ssh/generate script.

# host aliases

Host abacus
	Hostname abacus.cluenet.org
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

Host aurimo-seedbox
	Hostname 176.31.238.190

Host eta
	Hostname eta.cluenet.org
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

Host hawking
	Hostname hawking.cluenet.org
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

Host panther
	Hostname panther.nathan7.eu
	ForwardAgent yes

Host radian
	Hostname radian.cluenet.org
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

Host rain rain.local
	Hostname rain.nullroute.eu.org
	ForwardAgent yes
	ForwardX11 yes

Host snow snow.home snow.local
	#Hostname snow.home
	#Hostname snow.nullroute.eu.org
	HostkeyAlias snow.nullroute.eu.org
	User Mantas
	#ForwardAgent yes

Host tide
	Hostname tide.nullroute.eu.org
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

Host virgule
	Hostname virgule.cluenet.org
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

# *.cluenet.org

Host *.cluenet.org
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

# *.nullroute.eu.org

Host *.nullroute.eu.org *.home
	ForwardAgent yes

# other domains

Host *.nathan7.eu
	ForwardAgent yes

Host *.vistech.net
	User grwty

Host bazaar.launchpad.net
	IdentityFile ~/.ssh/id_global
	IdentitiesOnly yes

Host ofb.net
	ForwardAgent yes

# global options

#if OpenSSH && Version 5.7 && Host *.cluenet.org
Host *.*
	Hostname %h
Host *
	Hostname %h.cluenet.org
#endif

Host *
	Protocol 2
	ForwardX11Trusted yes
#if OpenSSH
	VerifyHostKeyDNS yes
#endif
	NoHostAuthenticationForLocalhost yes
	HashKnownHosts no

#if OpenSSH
	ControlPath ~/.ssh/S.%l.%r@%h:%p
	ControlMaster auto
#endif
#if OpenSSH && Version 5.6
	ControlPersist 10m
#endif

#if OpenSSH
	SendEnv LANG PULSE_SERVER TZ
#endif

	ServerAliveInterval 600
	#ServerAliveCountMax 3
