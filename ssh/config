# domain-wide settings

Host *.cluenet.org
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

Host *.kyriasis.com
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

Host *.nullroute.eu.org *.home
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

Host *.nathan7.eu
	ForwardAgent yes

Host *.vistech.net
	User grwty
	ControlMaster no

# virtual machines on the laptop

Host *.core
	ForwardAgent yes
#if Host rain
	UserKnownHostsFile ~/.ssh/known_hosts.core
#endif
	ControlMaster no

Host *.home *.local 10.* 192.168.*
	ForwardAgent yes
	UserKnownHostsFile ~/.ssh/known_hosts.local

# global options

#if OpenSSH && Version 5.7 && Host *.cluenet.org
Host *.*
	Hostname %h
Host *
	Hostname %h.cluenet.org
#endif

Host *
	Protocol 2
	ForwardX11Trusted yes
#if OpenSSH
	VerifyHostKeyDNS yes
#endif
	NoHostAuthenticationForLocalhost yes
	HashKnownHosts no

#if OpenSSH
	ControlPath ~/.ssh/S.%r@%h:%p
	ControlMaster auto
#endif
#if OpenSSH && Version 5.6
	ControlPersist 5m
#endif

#if OpenSSH
	SendEnv LANG PULSE_SERVER TZ
#endif

	ServerAliveInterval 600
	#ServerAliveCountMax 3
