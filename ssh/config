# other hosts

Host aur
	HostName aur4.archlinux.org
	User aur

Host bazaar.launchpad.net
	KexAlgorithms diffie-hellman-group1-sha1
	IdentityFile ~/.ssh/id_global
	IdentitiesOnly yes

Host ofb.net
	ForwardAgent yes

Host ubnt
	HostName 192.168.1.20
	User ubnt
	UserKnownHostsFile /dev/null
	GlobalKnownHostsFile /dev/null
	StrictHostKeyChecking no
	ControlPersist no

# domain-wide settings

Host *.cluenet.org
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

Host *.kyriasis.com
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

Host *.nullroute.eu.org *.home
	GSSAPIAuthentication yes
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

Host *.nathan7.eu
	ForwardAgent yes

Host *.vistech.net
	User grwty
	ControlMaster no

# virtual machines on the laptop

Host *.core
	ForwardAgent yes
	UserKnownHostsFile ~/.ssh/known_hosts.core
	ControlMaster no

Host *.home *.local 10.* 192.168.*
	ForwardAgent yes
	UserKnownHostsFile ~/.ssh/known_hosts.local

# global options

Host *
	Protocol 2
	IdentityFile ~/.ssh/id_rsa_2011-11-01
	IdentityFile ~/.ssh/id_ed25519_2015-05-15

	SendEnv LANG TZ
	ForwardX11Trusted yes

	HashKnownHosts no
	NoHostAuthenticationForLocalhost yes
	VerifyHostKeyDNS yes

	ControlPath ~/.ssh/S.%r@%h:%p
	ControlMaster auto
	ControlPersist 5m
