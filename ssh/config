# ~/.ssh/config: ssh_config(5)
# vim: ft=sshconfig

# note that the '#if' directives are not supported by any SSH client directly;
# instead, they are processed by the ssh/generate script.

#if OpenSSH && Version 6.3
IgnoreUnknown CanonicalDomains,CanonicalizeHostname,GSSAPIKeyExchange,PubkeyAcceptedKeyTypes
#endif

# work

Host cacti cacti.utenos-kolegija.lt
	HostName uk-cacti.utenos-kolegija.lt

Host sw-a9-core.utenos-kolegija.lt sw-b56-edge.utenos-kolegija.lt
	Ciphers 3des-cbc
	User admin
	IdentitiesOnly yes
	ControlMaster no

Host sw-m7-adm.utenos-kolegija.lt sw-m7-klases.utenos-kolegija.lt sw-m18-lan.utenos-kolegija.lt
	User admin
	KexAlgorithms diffie-hellman-group14-sha1

#if Host radius
#else
Host pf-*.utenos-kolegija.lt
	User root
	ProxyJump radius

Host uk-vpn.utenos-kolegija.lt
	ProxyJump radius
#endif

Host *.utenos-kolegija.lt *.ukolegija.lt 2001:778:e27f:* 193.219.181.*
	IdentityFile ~/.ssh/id_ukolegija
	ForwardAgent yes

Host gw-b56-bypass
	HostName 193.219.181.189
	HostkeyAlias gw-b56.utenos-kolegija.lt

Host gw-m7-bypass
	HostName 193.219.181.206
	ProxyJump gw-b56-bypass

Host radius-bypass
	HostName 193.219.181.253
	ProxyJump gw-b56-bypass

# domain-wide settings

Host abacus eta radian
	HostName %h.cluenet.org

Host *.cluenet.org
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

Host theos
	HostName %h.kyriasis.com

Host *.kyriasis.com
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

Host snow.nullroute.eu.org
	User Mantas

Host frost rain virgule
	HostName %h.nullroute.eu.org

Host *.nullroute.eu.org
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

Host panther
	HostName %h.nathan7.eu

Host *.nathan7.eu
	ForwardAgent yes

Host ofb.net
	ForwardAgent yes

Host *.zt1
	HostName %h.nullroute.eu.org

# virtual machines on the laptop

Host *.core
	ForwardAgent yes
	UserKnownHostsFile ~/.ssh/known_hosts.core
	ControlMaster no

Host *.home *.local 10.* 192.168.*
	ForwardAgent yes
	UserKnownHostsFile ~/.ssh/known_hosts.local

# other hosts

Host aur
	HostName aur.archlinux.org
	User aur

Host github.com
	ControlMaster auto
	ControlPersist 5m

Host ubnt
	HostName 192.168.1.20
	User ubnt
	UserKnownHostsFile /dev/null
	GlobalKnownHostsFile /dev/null
	StrictHostKeyChecking no
	ControlPersist no

# global options

Host *
	CanonicalizeHostname yes
	CanonicalDomains nullroute.eu.org nullroute.eu nullroute.lt utenos-kolegija.lt ukolegija.lt
	Protocol 2
	HashKnownHosts no
	VerifyHostKeyDNS yes
	GSSAPIAuthentication yes
	GSSAPIKeyExchange yes
	SendEnv LANG TZ
	ControlPath ~/.ssh/S.%r@%h:%p
	# speed up git-annex batch tasks
	ControlMaster auto
	ControlPersist 10s
	# probably of little use, but at least DSCP is more meaningful than
	# the default values, which use the obsolete 'ToS bits' interpretation
	IPQoS cs3 cs0
