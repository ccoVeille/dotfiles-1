	#diff-options = --patience
	ignore-case = true
	line-graphics = true
	show-changes = no
	split-view-height = 75%

[tig "bind"]
	generic = Backspace view-close
	generic = <Backspace> view-close
	generic = \\ scroll-line-up
	generic = E !git format-patch -1 %(commit)
	# noop on unrecognized escape sequences
	main = ~ none
	main = G move-last-line

