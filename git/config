# ~/.gitconfig: git-config(1) - Git configuration
# vim: ft=gitconfig

[core]
	excludesfile = ~/.config/git/ignore
	# never use an askpass even if $SSH_ASKPASS is set
	# (uses "password" entry even for usernames, confusing)
	askpass = 
	autocrlf = false
	logAllRefUpdates = true
[user]
	name = Mantas Mikulėnas
	email = grawity@gmail.com
[advice]
	pushNonFastForward = false
	statusHints = false
[alias]
	a = add --all
	amend = commit --amend
	br = branch
	bra = branch -vv
	ci = commit
	ci-m = commit -m
	cim = commit -m
	#clone-svnsync = svn clone --use-svnsync-props --preserve-empty-dirs
	clone-svnsync = svn clone --use-svnsync-props
	co = checkout
	di = diff
	empty = !git init && git commit --allow-empty -m Initial
	export = !touch $(git rev-parse --git-dir)/git-daemon-export-ok
	fa = fetch --all
	follow = log --oneline --follow --stat --summary --
	# kept around for the lulz
	fuckit = !git add -A && git commit -m "$(curl -s whatthecommit.com/index.txt)" && git push -f
	in = log --oneline --decorate ..@{upstream}
	lg = log --oneline --decorate
	ls = ls-files
	logs = log --show-signature
	mend = commit --amend --reuse-message HEAD
	mirror = clone --mirror
	mkobject = hash-object --stdin -w
	mrproper = !git reset --hard HEAD && git clean -fdx
	out = log --oneline --decorate @{upstream}..
	pick = cherry-pick
	re = rebase
	rec = rebase --continue
	refs = for-each-ref
	remaster = rebase -i master
	repack-to-alternate = repack -dal
	repack-to-local = repack -da
	sg = diff --cached
	st = status
	staged = diff --cached
	stat = diff --stat
	statg = diff --cached --stat
	tags = for-each-ref --format=\"%(*objecttype)%09%(refname)\" \"refs/tags/*\"
	tg = log --oneline --decorate --graph
	tip = !git --no-pager log -1 --decorate --abbrev-commit --date=relative --show-signature
	undo = reset --soft HEAD^
	unexport = !rm -v $(git rev-parse --git-dir)/git-daemon-export-ok
	wdiff = diff --word-diff
	wshow = show --word-diff
[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto
[color "diff"]
	whitespace = red reverse
[color "grep"]
	filename = magenta
	linenumber = green
[column]
	# Apparently order matters.
	ui = auto
	branch = never
	tag = auto dense
[credential]
	helper = cache --socket $XDG_RUNTIME_DIR/git-credential-cache.socket
	helper = lib gnomekeyring
	#helper = lib windows
	#helper = netrc
	helper = readonly store --file ~/.auth/git-credential-store
	useHttpPath = false
[diff]
	renames = copies
[diff "gpg"]
	textconv = gpg -v
	xfuncname = "^((pub|uid) .*)"
[diff "ldif"]
	xfuncname = "^(dn: .+)$"
[diff "polkit"]
	xfuncname = "(<action id=\\\".+\\\">)"
[gc]
	reflogExpire = 365 days
	reflogExpireUnreachable = 365 days
[grep]
	lineNumber = true
	extendedRegexp = true
[init]
	templateDir = ~/.config/git/template
[merge]
	defaultToUpstream = true
[push]
	#default = upstream
	default = current
[rebase]
	autosquash = true
[receive]
	denyCurrentBranch = refuse
[sendemail]
	from = Mantas Mikulėnas <grawity@gmail.com>
	confirm = auto
	chainReplyTo = false
	smtpServer = /usr/bin/msmtp
	#smtpServerOption = --debug
	smtpServerOption = --read-envelope-from

# External programs

[filter "merge-known-hosts"]
	clean = ssh-duphosts -m -
	smudge = cat
[github]
	user = grawity
	password = !getnetrc -df %p github.com grawity
[gui]
	encoding = utf-8
	fontdiff = -family \"DejaVu Sans Mono\" -size 9 -weight normal -slant roman -underline 0 -overstrike 0
[tig]
	show-date = relative
	#show-author = abbreviated
	show-filename = false
	author-width = 12
	show-rev-graph = true
	line-graphics = true
	commit-order = topo
	split-view-height = 75%
	#vertical-split = true
	ignore-case = true
[tig "bind"]
	# noop on unrecognized escape sequences
	main = ~ none
	main = 4 toggle-graphic
[tig "color"]
	cursor = black green
	title-focus = color16 color39
	title-blur = color16 color25

# URL replacements

#[url "ssh://"]
#	pushInsteadOf = git://

[url "git://git.nullroute.eu.org/"]
	insteadOf = nullroute:
[url "grawity@virgule.cluenet.org:pub/git/"]
	insteadOf = nullroute+ssh:
	pushInsteadOf = nullroute:
	pushInsteadOf = git://git.nullroute.eu.org/

[url "git://anongit.freedesktop.org/"]
	insteadOf = freedesktop:
	insteadOf = fdo:

[url "git@gist.github.com:"]
	pushInsteadOf = git://gist.github.com/

[url "git://github.com/"]
	insteadOf = gh:
[url "git@github.com:"]
	pushInsteadOf = git://github.com/
	pushInsteadOf = gh:

[url "git://git.gnome.org/"]
	insteadOf = gnome:

[url "https://kernel.googlesource.com/"]
	insteadOf = kernel.org::

[include]
	path = ~/.gitconfig-local
