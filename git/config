# ~/.gitconfig: git-config(1) - Git configuration
# vim: ft=gitconfig:nowrap

[user]
	name = Mantas Mikulėnas
	email = grawity@gmail.com
	signingKey = "D24F6CB2C1B52632"

[alias]
	a = add --all
	a-p = add --all --patch
	amend = commit --amend
	br = branch
	bra = branch -vv
	ci = commit
	ci-m = commit -m
	cim = commit -m
	#clone-svnsync = svn clone --use-svnsync-props --preserve-empty-dirs
	clone-svnsync = svn clone --use-svnsync-props
	co = checkout
	di = diff
	emerge = merge --edit --no-ff
	export = "!touch \"$(git rev-parse --git-dir)/git-daemon-export-ok\""
	fa = fetch --all
	follow = log --oneline --follow --stat --summary --
	fpush = push --force-with-lease
	ftime = "!date +'--date=%s' -r"
	in = log --oneline --decorate ..@{upstream}
	lg = log --oneline --decorate
	lgs = log --format=\"%C(yellow)%h%C(reset)%C(cyan)% GK%C(reset) %s\"
	logs = log --show-signature
	lost = "!git fsck | awk '/dangling commit/ {print $3 \"^!\"}' | xargs git log"
	ls = ls-files
	lsr = "!_() { [ \"$1\" ] || set -- HEAD; git ls-tree -r \"$@\"; }; _"
	mend = commit --amend --reuse-message HEAD
	mkobject = hash-object --stdin -w
	mrproper = !git reset --hard HEAD && git clean -fdx
	out = log --oneline --decorate @{upstream}..
	rbc = rebase --continue
	rbs = rebase -i
	re = rebase
	rec = rebase --continue
	refs = for-each-ref
	repack-to-alternate = repack -dal
	repack-to-local = repack -da
	sg = diff --cached
	st = status
	staged = diff --cached
	stat = diff --stat
	statg = diff --cached --stat
	tagv = !git tag -v $(git describe --abbrev=0)
	tg = log --oneline --decorate --graph
	tip = !git --no-pager log -1 --decorate --abbrev-commit --date=relative --show-signature
	uncommit = reset HEAD^
	undo = reset --soft HEAD^
	unexport = "!rm -v \"$(git rev-parse --git-dir)/git-daemon-export-ok\""
	wdiff = diff --word-diff
	wshow = show --word-diff

# Everything else

[advice]
	detachedHead = false
	pushNonFastForward = false
	statusHints = false

[am]
	messageid = true

[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto

[color "decorate"]
	remoteBranch = 202

[color "diff"]
	whitespace = red reverse
	commit = 214
	frag = 38
	func = 87
	new = 76
	old = 196

[color "grep"]
	filename = magenta
	linenumber = green

[column]
	# option order matters, apparently?
	ui = auto
	branch = never
	status = never
	tag = auto dense

[core]
	excludesfile = ~/.config/git/ignore
	# never use an askpass even if $SSH_ASKPASS is set
	# (uses "password" entry even for usernames, confusing)
	askpass = 
	autocrlf = false
	logAllRefUpdates = true

[credential]
	helper = cache --socket $XDG_RUNTIME_DIR/git-credential-cache.socket
	helper = lib gnomekeyring
	#helper = lib windows
	#helper = netrc
	helper = store --file ~/.auth/git-credential-store
	useHttpPath = false

[diff]
	renames = copies
	submodule = log

[diff "gpg"]
	textconv = gpg -v
	xfuncname = "^((pub|uid) .*)"

[diff "ldif"]
	xfuncname = "^(dn: .+)$"

[diff "polkit"]
	xfuncname = "(<action id=\\\".+\\\">)"

[filter "merge-known-hosts"]
	clean = ssh-duphosts -m -
	smudge = cat

[gc]
	reflogExpire = 365 days
	reflogExpireUnreachable = 365 days

[github]
	user = grawity
	password = !getnetrc -df %p github.com grawity

[grep]
	lineNumber = true
	extendedRegexp = true

[gui]
	encoding = utf-8
	fontdiff = -family \"DejaVu Sans Mono\" -size 9 -weight normal -slant roman -underline 0 -overstrike 0

[init]
	templateDir = ~/.config/git/template

[merge]
	defaultToUpstream = true
	conflictStyle = diff3

[pack]
	writebitmaps = true

[push]
	#default = upstream
	default = current

[rebase]
	autosquash = true

[receive]
	denyCurrentBranch = refuse

[sendemail]
	from = Mantas Mikulėnas <grawity@gmail.com>
