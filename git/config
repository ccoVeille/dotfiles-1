	smtpServerOption = --read-envelope-from

[tig]
	# [v1 opts]
	# show-date = relative
	# #show-author = abbreviated
	# author-width = 12
	# show-filename = false
	# show-rev-graph = true
	# #vertical-split = true

	# [v2 opts]
