# ~/.gitconfig: git-config(1) - Git configuration
# vim: ft=gitconfig

[core]
	excludesfile = ~/.config/git/ignore
	# never use an askpass even if $SSH_ASKPASS is set
	# (uses "password" entry even for usernames, confusing)
	askpass = 
[user]
	name = Mantas Mikulėnas
	email = grawity@gmail.com
[advice]
	pushNonFastForward = false
	statusHints = false
[alias]
	a = add
	amend = commit --amend
	br = branch
	bra = branch-info
	ci = commit
	cim = commit -m
	ci-m = commit -m
	co = checkout
	di = diff
	empty = !git init && git commit --allow-empty -m Initial
	export = !touch $(git rev-parse --git-dir)/git-daemon-export-ok
	fa = fetch --all
	follow = log --oneline --follow --stat --summary --
	lg = log --oneline --decorate
	local = log --oneline @{upstream}..HEAD
	ls = ls-files
	mend = commit --amend --reuse-message HEAD
	mrproper = !git reset --hard HEAD && git clean -fdx
	pick = cherry-pick
	remaster = rebase --autosquash -i @{upstream}
	repack-to-alternate = repack -dal
	repack-to-local = repack -da
	sg = diff --cached
	st = status
	staged = diff --cached
	stat = diff --stat
	statg = diff --cached --stat
	tg = log --oneline --decorate --graph
	tip = log -1 --decorate=short --abbrev-commit --date=relative
	undo = reset --soft HEAD^
	unexport = !rm -v $(git rev-parse --git-dir)/git-daemon-export-ok
[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto
[color "diff"]
	whitespace = red reverse
[color "grep"]
	filename = magenta
	linenumber = green
[credential]
	helper = cache --socket $XDG_RUNTIME_DIR/git-credential-cache.socket
	helper = lib gnomekeyring
	helper = lib windows
	helper = netrc
	helper = store --file ~/.auth/git-credential-store
	useHttpPath = false
[diff]
	renames = copies
[diff "ldif"]
	xfuncname = "^(dn: .+)$"
[grep]
	lineNumber = true
	extendedRegexp = true
[merge]
	defaultToUpstream = true
[push]
	#default = upstream
	default = current
[rebase]
	autosquash = true
[receive]
	denyCurrentBranch = refuse
[sendemail]
	from = Mantas Mikulėnas <grawity@gmail.com>
	confirm = auto
	chainReplyTo = false
	smtpServer = /usr/bin/msmtp
	#smtpServerOption = --debug
	smtpServerOption = --read-envelope-from

# External programs

[filter "merge-known-hosts"]
	clean = ssh-duphosts -m -
	smudge = cat

[github]
	user = grawity
	password = !getnetrc -df %p github.com grawity
[gui]
	encoding = utf-8
	fontdiff = -family \"DejaVu Sans Mono\" -size 9 -weight normal -slant roman -underline 0 -overstrike 0
[tig]
	#show-id = true
	show-date = relative
	#show-author = abbreviated
	show-author = false
	author-width = 10
	show-rev-graph = true
	line-graphics = true
	commit-order = topo
	split-view-height = 75%
	#vertical-split = true
	ignore-case = true
[tig "bind"]
	# noop on unrecognized escape sequences
	main = ~ none
	main = 8 toggle-graphic
[tig "color"]
	cursor = black green
	title-focus = color231 blue
	title-blur = color16 blue

# URL replacements

[url "ssh://"]
	pushInsteadOf = git://

[url "git://git.nullroute.eu.org/"]
	insteadOf = nullroute:
[url "virgule:pub/git/"]
	insteadOf = nullroute+ssh:
	pushInsteadOf = nullroute:
	pushInsteadOf = git://git.nullroute.eu.org/

[url "git://anongit.freedesktop.org/"]
	insteadOf = freedesktop:
	insteadOf = fdo:

[url "git://gist.github.com/"]
	insteadOf = gist:
	insteadOf = https://gist.github.com/
[url "git@gist.github.com:"]
	insteadOf = gist+ssh:
	pushInsteadOf = git://gist.github.com/
	pushInsteadOf = gist:
	pushInsteadOf = https://gist.github.com/

[url "git://github.com/"]
	insteadOf = gh:
[url "git@github.com:"]
	insteadOf = gh+ssh:
	pushInsteadOf = git://github.com/
	pushInsteadOf = gh:
	pushInsteadOf = https://github.com/

[url "git://git.gnome.org/"]
	insteadOf = gnome:

[url "git://git.sv.gnu.org/"]
	insteadOf = gnu:

[url "git://anongit.kde.org/"]
	insteadOf = kde:

[url "git://git.kernel.org/pub/scm/linux/kernel/git/"]
	insteadOf = linux:

[include]
	path = ~/.gitconfig-local
