# other domains

Host *.vistech.net
	User grwty

Host bazaar.launchpad.net
	IdentityFile no

Host am-naujas
	User root
	Hostname 176.31.238.190

# global options

Host *
	Protocol 2
	ForwardX11Trusted yes
#if OpenSSH
	VerifyHostKeyDNS yes
#endif
	NoHostAuthenticationForLocalhost yes
	HashKnownHosts no

#if OpenSSH
	ControlPath ~/.ssh/S.%l.%r@%h:%p
	ControlMaster auto
#endif
#if OpenSSH && Version 5.6
	ControlPersist 10m
#endif

#if OpenSSH
	SendEnv LANG PULSE_SERVER TZ
#endif

	ServerAliveInterval 600
	#ServerAliveCountMax 3
