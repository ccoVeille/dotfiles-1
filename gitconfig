# ~/.gitconfig: git-config(1) - Git configuration
# vim: ft=gitconfig

[core]
	excludesfile = ~/.gitignore
	# never use an askpass even if $SSH_ASKPASS is set
	# (uses "password" entry even for usernames, confusing)
	askpass = 
[user]
	name = Mantas MikulÄ—nas
	email = grawity@gmail.com
[advice]
	statusHints = false
[alias]
	a = add
	amend = commit --amend
	br = branch
	#bra = branch -a -v
	bra = branch-info
	ci = commit
	co = checkout
	di = diff
	empty = !git init && git commit --allow-empty -m Initial
	export = !touch $(git rev-parse --git-dir)/git-daemon-export-ok
	lg = log --oneline --decorate
	local = log --oneline origin/master..HEAD
	ls = ls-files
	mend = commit --amend --reuse-message HEAD
	mrproper = !git reset --hard HEAD && git clean -fdx
	remaster = rebase --autosquash -i @{upstream}
	sg = diff --cached
	st = status
	staged = diff --cached
	stat = diff --stat
	statg = diff --cached --stat
	tg = log --oneline --decorate --graph
	tip = log -1 --decorate=short --abbrev-commit --date=relative
	undo = reset --soft HEAD^
	unexport = !rm -v $(git rev-parse --git-dir)/git-daemon-export-ok
[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto
[color "diff"]
	whitespace = red reverse
[color "grep"]
	filename = magenta
	linenumber = green
[credential]
	helper = cache
	helper = lib gnomekeyring
	helper = netrc
	helper = store --file ~/.auth/git-credential-store
	useHttpPath = false
[diff]
	renames = copies
[grep]
	lineNumber = true
	extendedRegexp = true
[merge]
	defaultToUpstream = true
[push]
	#default = upstream
	default = current
[rebase]
	autosquash = true
[receive]
	denyCurrentBranch = refuse
[sendemail]
	smtpserver = /usr/bin/msmtp

# External programs

[github]
	user = grawity
	token = !getnetrc -df %p api.github.com grawity
[gui]
	encoding = utf-8
	fontdiff = -family \"DejaVu Sans Mono\" -size 9 -weight normal -slant roman -underline 0 -overstrike 0
[tig]
	show-date = relative
	show-author = abbreviated
	author-width = 10
	show-rev-graph = true
	line-graphics = true
	commit-order = topo
	split-view-height = 75%
[tig "bind"]
	# noop on unrecognized escape sequences
	main = ~ none
[tig "color"]
	cursor = black green
	title-focus = black blue

# URL replacements

[url "ssh://"]
	pushInsteadOf = git://

[url "git://panther.nathan7.eu/~grawity/pub/git/"]
	#insteadOf = nullroute:
[url "ssh://panther.nathan7.eu/~grawity/pub/git/"]
	insteadOf = nullroute+ssh:
	insteadOf = nullroute:
	pushInsteadOf = nullroute:

[url "git://anongit.freedesktop.org/"]
	insteadOf = freedesktop:
	insteadOf = fdo:

[url "git://gist.github.com/"]
	insteadOf = gist:
	insteadOf = https://gist.github.com/
[url "git@gist.github.com:"]
	insteadOf = gist+ssh:
	pushInsteadOf = git://gist.github.com/
	pushInsteadOf = gist:
	pushInsteadOf = https://gist.github.com/

[url "git://github.com/"]
	insteadOf = github:
	insteadOf = gh:
	insteadOf = https://github.com/
[url "git@github.com:"]
	insteadOf = github+ssh:
	insteadOf = gh+ssh:
	pushInsteadOf = git://github.com/
	pushInsteadOf = github:
	pushInsteadOf = gh:
	pushInsteadOf = https://github.com/

[url "git://git.gnome.org/"]
	insteadOf = gnome:

[url "git://git.sv.gnu.org/"]
	insteadOf = gnu:

[url "git://anongit.kde.org/"]
	insteadOf = kde:

[url "git://git.kernel.org/pub/scm/linux/kernel/git/"]
	insteadOf = linux:

[include]
	path = .gitconfig-local
