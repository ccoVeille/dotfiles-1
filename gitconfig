# ~/.gitconfig: git-config(1) - Git configuration
# vim: ft=gitconfig

[core]
	excludesfile = ~/.gitignore
	# never use an askpass even if $SSH_ASKPASS is set
	# (uses "password" entry even for usernames, confusing)
	askpass = 
[user]
	name = Mantas MikulÄ—nas
	email = grawity@nullroute.eu.org
[advice]
	statusHints = false
[alias]
	a = add
	ci = commit
	cia = commit -a -m "Commit"
	co = checkout
	st = status
	br = branch
	staged = diff --cached
	unstaged = diff
	unstage = reset HEAD
	lg = log --oneline --decorate
	tg = log --oneline --decorate --graph
	ls = ls-files
	sg = diff --cached
	stat = diff --stat
	statg = diff --cached --stat
	amend = commit --amend
	mend = commit --amend --reuse-message HEAD
	undo = reset --soft HEAD^
	remaster = rebase --autosquash -i master
	local = log --oneline origin/master..HEAD
	export = !touch $(git rev-parse --git-dir)/git-daemon-export-ok
	unexport = !rm -v $(git rev-parse --git-dir)/git-daemon-export-ok
	new = !tig HEAD@{1}..
	mrproper = !git reset --hard HEAD && git clean -fdx
[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto
[color "diff"]
	whitespace = red reverse
[color "grep"]
	filename = magenta
	linenumber = green
[credential]
	helper = cache
	helper = lib gnomekeyring
	helper = netrc
	helper = store --file ~/.auth/git-credential-store
	useHttpPath = false
[diff]
	renames = copies
[grep]
	lineNumber = true
	extendedRegexp = true
[merge]
	defaultToUpstream = true
[push]
	default = upstream
[sendemail]
	smtpserver = /usr/bin/msmtp

# External programs

[github]
	user = grawity
	token = !getnetrc -df %p api.github.com grawity
[gui]
	encoding = utf-8
	fontdiff = -family \"DejaVu Sans Mono\" -size 9 -weight normal -slant roman -underline 0 -overstrike 0
[tig]
	show-date = relative
	show-author = abbreviated
	author-width = 10
	line-graphics = true
	tab-size = 4
[tig "bind"]
	# noop on unrecognized escape sequences
	main = ~ none
[tig "color"]
	cursor = black green
	title-focus = white blue

# URL replacements

[url "ssh://"]
	pushInsteadOf = git://

[url "ssh://equal.cluenet.org/srv/git/equal.cluenet.org/"]
	# UGH.
	pushInsteadOf = git://equal.cluenet.org/

[url "git://equal.cluenet.org/~grawity/pub/git/"]
	insteadOf = nullroute:
[url "ssh://equal.cluenet.org/~grawity/pub/git/"]
	insteadOf = nullroute+ssh:
	pushInsteadOf = nullroute:

[url "git://anongit.freedesktop.org/"]
	insteadOf = freedesktop:
	insteadOf = fdo:

[url "git://gist.github.com/"]
	insteadOf = gist:
	insteadOf = https://gist.github.com/
[url "git@gist.github.com:"]
	insteadOf = gist+ssh:
	pushInsteadOf = git://gist.github.com/
	pushInsteadOf = gist:
	pushInsteadOf = https://gist.github.com/

[url "git://github.com/"]
	insteadOf = github:
	insteadOf = gh:
	insteadOf = https://github.com/
[url "git@github.com:"]
	insteadOf = github+ssh:
	insteadOf = gh+ssh:
	pushInsteadOf = git://github.com/
	pushInsteadOf = github:
	pushInsteadOf = gh:
	pushInsteadOf = https://github.com/

[url "git://git.gnome.org/"]
	insteadOf = gnome:

[url "git://git.sv.gnu.org/"]
	insteadOf = gnu:

[url "git://anongit.kde.org/"]
	insteadOf = kde:
